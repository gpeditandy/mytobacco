<view class="mypage">
  <view class="container">
      <view class="title">
        <text>烤房c</text>
        <text class="running"></text>
      </view>
      <view class="device-num">
        <text>设备型号：</text>
        <text>HBWH210532A01</text>
      </view>
      <view class="device-num">
        <text>管理员：</text>
        <text>小西</text>
      </view>
  </view>
  <view class="container">
    <view class="tobacco-item">
      <text class="first-cate">烟叶品种</text>
      <input class="category" type="text" value="" bindinput="handleCategory" placeholder="请输入" placeholder-class="placeholder" />
    </view>
    <view class="tobacco-item">
      <text class="first-cate">烟叶部分</text>
      <view class="weui-cell weui-cell_select my-cell">
          <view class="weui-cell__bd">
              <picker bindchange="bindAccountChange" value="{{accountIndex}}" range="{{accounts}}">
                  <view class="weui-select">{{accounts[accountIndex]}}</view>
              </picker>
          </view>
      </view>
    </view>

    <view class="tobacco-item">
      <text class="first-cate">烟叶含水率</text>
      <view class="weui-cell weui-cell_select my-cell">
          <view class="weui-cell__bd">
              <picker bindchange="bindWaterChange" value="{{tobaccoIndex}}" range="{{waterAccouts}}">
                  <view class="weui-select">{{waterAccouts[tobaccoIndex]}}</view>
              </picker>
          </view>
      </view>
    </view>

    <view class="tobacco-item">
      <text class="first-cate">装烟大致重量</text>
      <input class="category" type="text" value="" bindinput="handleWeight" placeholder="请输入" placeholder-class="placeholder" />
    </view>
  </view>
  <view class="btn">确定</view>
</view>