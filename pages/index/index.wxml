<view class="mypage">
  <view wx:if="{{userDataList.usertype==5}}" class="common-user">
    <view class="container">
      <view class="header-box">
        <view class="header">
          <image src="{{userDataList.avatar}}" class="cls-header"></image>
          <text class="nickname">{{userDataList.realname}}</text>
        </view>
        <view class="user-identity" wx:if="{{userDataList.usertype==0}}">省级管理员</view>
        <view class="user-identity" wx:elif="{{userDataList.usertype==1}}">市级管理员</view>
        <view class="user-identity" wx:elif="{{userDataList.usertype==2}}">分公司管理员</view>
        <view class="user-identity" wx:elif="{{userDataList.usertype==3}}">烘烤管理员</view>
        <view class="user-identity" wx:elif="{{userDataList.usertype==4}}">下乡管理员</view>
        <view class="user-identity" wx:else="{{userDataList.usertype==5}}">一般用户</view>
      </view>
      <view class="user-info">
        <view class="left">
          <text>管理烤房(座)</text>
          <text class="num">{{userDataList.totalCount}}</text>
        </view>
        <view class="left">
          <text>正在运行(座)</text>
          <text class="num">{{userDataList.runningCount}}</text>
        </view>
      </view>
      <view class="add-device" bindtap="scan">
        <text class="iconfont icon-jiahao"></text>
        <text>扫码添加设备</text>
      </view>
    </view>
    <view class="container run" wx:for="{{userDataList.bakeroomList}}" wx:key="index" bindtap="handleRunn">
      <view class="title">
        <text>{{item.name}}</text>
        <text class="{{item.status==1?'':'running'}}">{{item.status==1?'运行中':'停运'}}</text>
      </view>
      <view class="device-num">
        <text>设备编号：</text>
        <text>{{item.deviceNo}}</text>
      </view>
      <view class="device-num">
        <text>管理员：</text>
        <text>{{item.managerName===''||item.managerName==='undefined' || item.managerName===null?'暂无管理员':item.managerName}}</text>
      </view>
    </view>

