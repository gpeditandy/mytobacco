.header {
  margin: 150rpx 50rpx;
  border-bottom: 1rpx solid #ccc;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.header .userimg {
  overflow:hidden;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
}
.header .username{text-align: center;margin:20rpx 0;font-size:32rpx;color: #000;}
.content {
  margin-left: 50rpx;
  margin-bottom: 90rpx;
}

.content text {
  display: block;
  color: #9d9d9d;
  margin-top: 40rpx;
}
.bottom {
  border-radius: 80rpx;
  margin: 70rpx 50rpx;
  font-size: 35rpx;
}